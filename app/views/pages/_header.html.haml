%header
	.header_width_adjust
		= link_to image_tag('QPC-logo.png'), '/', :id => 'logobox'
		#top_bar	
			.language 
				= link_to "", cn_root_path, :style => "background: url('#{root_path}assets/cn_flag.png') no-repeat"
			.locations
				%ul
					- cities.each do |city|
						%li
							= "#{city}"
		#header_space
			- if flash[:notice]
				.message= flash[:notice]

		= render 'pages/nav'
