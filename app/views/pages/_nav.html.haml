.nav.navbar-wrapper
	.container
		.navbar.navbar-static-top
			.container
				= link_to "中文", '/cn', {:id => 'lang', :class=>"btn btn-danger nav-lang-btn"}
				%button.navbar-toggle{"type"=>"button", "data-toggle"=>"true", "data-target"=>".nav-collapse"}
					%span.icon-bar
					%span.icon-bar
					%span.icon-bar
				= link_to "QPC Partners", "/", :class => "navbar-brand"
				.nav-collapse.collapse
					%ul.nav.navbar-nav
						- nav_items.each_with_index do |(nav, con), i|
							- if i == 0 
								%li= link_to nav, "/#{con}", {:class=>'active'}
							- else
								%li= link_to nav, "/#{con}"
