= form_tag({:controller => "contacts", :action => "new"}, :class => "form-group", :method => "post") do
	.row
		.col-lg-9.col-sm-9.col-12
			.row
				.col-lg-4.col-sm-4.col-12
					%h4.text-right.hidden-sm Full Name
					%h4.text-left.visible-sm Full Name
				.col-lg-8.col-sm-8.col-12
					= text_field_tag "contact[name]", value_for(:contact, :name), :class => "form-control", :required => "true"
			%br.hidden-sm
			.row
				.col-lg-4.col-sm-4.col-12
					%h4.text-right.hidden-sm Email Address
					%h4.text-left.visible-sm Email Address
				.col-lg-8.col-sm-8.col-12
					= text_field_tag "contact[email]", value_for(:contact, :email), :class => "form-control", :required => "true"
			%br.hidden-sm
			.row
				.col-lg-4.col-sm-4.col-12
					%h4.text-right.hidden-sm Phone Number
					%h4.text-left.visible-sm Phone Number
				.col-lg-8.col-sm-8.col-12
					= text_field_tag "contact[phone]", value_for(:contact, :phone), :class => "form-control"
			%br.hidden-sm
			.row
				.col-lg-4.col-sm-4.col-12
					%h4.text-right.hidden-sm Company Name
					%h4.text-left.visible-sm Company Name
				.col-lg-8.col-sm-8.col-12
					= text_field_tag "contact[company]", value_for(:contact, :company), :class => "form-control"
			%br.hidden-sm
			.row
				.col-lg-4.col-sm-4.col-12
					%h4.text-right.hidden-sm Company Website
					%h4.text-left.visible-sm Company Website
				.col-lg-8.col-sm-8.col-12
					= text_field_tag "contact[website]", value_for(:contact, :website), :class => "form-control"
			%br.hidden-sm
			.row
				.col-lg-4.col-sm-4.col-12
					%h4.text-right.hidden-sm Message Body
					%h4.text-left.visible-sm Message Body
				.col-lg-8.col-sm-8.col-12
					= text_area_tag "contact[message]", value_for(:contact, :message), :class => "form-control", :rows => "5", :required => "true"
			%br
			.row
				.col-lg-4.col-sm-4.col-12
				.col-lg-8.col-sm-8.col-12
