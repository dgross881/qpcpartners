<% @title = phrase('summary.executive_summary') %>
<div class='container'>
  <h1><%= phrase('summary.about_qpc_partners') %></h1>
  <br>
  <div class='row'>
    <div class='col-md-7 col-sm-6 col-12'>
      <br/>
      <%= image_tag 'usachinaflags.jpg', class: 'image-fluid consulting-image' %>
      <h3><%= phrase('summary.executive_summary') %></h3>
      <p><%= phrase('summary.executive_summary_first')%></p>
      <p><%= phrase('summary.executive_summary_second')%></p>
      <% if !english? %>
        <p><%= phrase('summary.executive_summary_third') %></p>
      <% end %>
    </div>    
    <div class='col-md-4 col-sm-12 col-md-offset-1'>
      <div class='row'>
        <div class='col-md-12'>
          <h3><%= phrase('summary.business_scope') %></h3>
          <br />
        </div>
        <div class='col-md-12'>
          <div class='panel panel-default'>
            <div class='panel-heading'>
              <h3 class='panel-title'><%= phrase('summary.our_clients') %></h3>
            </div>
            <div class='panel-body'>
              <%= phrase('summary.our_clients_pg') %>
            </div>
          </div>
        </div>
        <div class='col-md-12'>
          <div class='panel panel-default'>
            <div class='panel-heading'>
              <h3 class='panel-title'><%= phrase('summary.consulting_services') %></h3>
            </div>
            <div class='panel-body'>
              <%= phrase('summary.consulting_services_pg') %>
            </div>
          </div>
        </div>
        <div class='col-md-12'>
          <div class='panel panel-default'>
            <div class='panel-heading'>
              <h3 class='panel-title'><%= phrase('summary.target_acquisition') %></h3>
            </div>
            <div class='panel-body'>
              <%= phrase('summary.target_acquisition_pg') %>
            </div>
            <% if english? %>
              <div class='panel-body'>
               <%= phrase('summary.companies_showing') %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
